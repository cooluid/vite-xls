{
	"compilerOptions": {
		"target": "ESNext", // 使用最新的ECMAScript特性
		"useDefineForClassFields": true, // 使用define语义为类字段
		"module": "ESNext", // 使用ESNext模块系统
		"lib": ["ES2020", "DOM", "DOM.Iterable"], // 包含的库文件
		"skipLibCheck": true, // 跳过声明文件的类型检查
		"forceConsistentCasingInFileNames": true, // 强制文件名大小写一致性
		"rootDir": "./src", // 指定源文件目录
		"outDir": "dist", // 指定输出目录
		"esModuleInterop": true, // 允许使用import语法导入CommonJS模块
		"baseUrl": ".", // 基本URL为当前目录
		"types": ["node"], // 包含node类型定义
		/* Bundler mode */
		"moduleResolution": "bundler", // 使用bundler模块解析策略
		"allowImportingTsExtensions": true, // 允许导入.ts文件
		"isolatedModules": true, // 将每个文件作为单独的模块
		"moduleDetection": "force", // 强制模块检测
		"noEmit": true, // 不生成输出文件
		"jsx": "preserve", // 保留JSX以供后续转换
		/* Linting */
		"strict": true, // 启用所有严格类型检查选项
		// 开启所有严格类型检查选项
		"noImplicitAny": true, // 禁止隐式的any类型
		// 禁止隐式的 any 类型
		"strictNullChecks": true, // 启用严格的null检查
		// 启用严格的 null 检查
		"strictFunctionTypes": true, // 检查函数类型的兼容性
		// 检查函数类型的兼容性
		"noFallthroughCasesInSwitch": true, // 防止switch语句中的贯穿情况
		"paths": {
			"@/*": ["src/*"] // 路径别名，@指向src目录
		},
		"sourceMap": true,
	},
	"include": [
		"src/**/*.ts", // 包含所有TypeScript文件
		"src/**/*.tsx", // 包含所有TypeScript React文件
		"src/**/*.vue", // 包含所有Vue文件
		"src/global.d.ts" // 包含全局声明文件
	]
}
