{
	// 定义编译器选项
	"compilerOptions": {
		// 使用最新的ECMAScript特性
		"target": "ESNext",
		// 使用CommonJS模块系统，适用于Electron
		"module": "CommonJS",
		// 允许使用import语法导入CommonJS模块
		"esModuleInterop": true,
		// 指定源文件目录
		"rootDir": "./electron",
		// 指定输出目录
		"outDir": "dist_electron",
		// 强制文件名大小写一致性
		"forceConsistentCasingInFileNames": true,
		// 启用所有严格类型检查选项
		"strict": true,
		// 生成源映射文件，便于调试
		"sourceMap": true,
		// 使用Node.js的模块解析策略
		"moduleResolution": "Node",
		// 包含node类型定义
		"types": ["node"]
	},
	// 指定需要编译的文件列表
	"include": [
		"electron/index.ts", // 包含主进程文件
		"electron/preload.ts" // 包含预加载脚本
	]
}
